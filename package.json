{
  "name": "spiral-sounds",
  "version": "1.0.0",
  "description": "Online classic vinyl store",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "netlify deploy --prod",
    "dev": "trap \"npm run services:stop\" INT EXIT && npm run services:up && npm run migrations:up && nodemon server.js",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "db:log": "node logTable.js",
    "migrations:up": "node-pg-migrate -m './infra/migrations' up",
    "migrations:down": "node-pg-migrate -m './infra/migrations' down",
    "db:create": "node ./db/createTable.js",
    "db:seed": "trap \"npm run services:stop\" INT EXIT && npm run services:up && node ./infra/seed/index.js"
  },
  "author": "Cristian Giehl",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "nodemon": "^3.1.11",
    "pg": "^8.18.0",
    "serverless-http": "^4.0.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^17.3.0",
    "node-pg-migrate": "^8.0.4"
  }
}
